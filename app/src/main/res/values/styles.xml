<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <!-- Main activity theme. -->
    <style name="MovieActivityTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Sunshine.NoTitle</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Sunshine.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- Style for forecast listview -->
    <style name="MovieListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="element_style_big">
        <item name="android:paddingLeft">@dimen/element_padding_left_big</item>
        <item name="android:paddingRight">@dimen/element_padding_right_big</item>
        <item name="android:paddingTop">@dimen/element_padding_top_big</item>
        <item name="android:paddingBottom">@dimen/element_padding_bottom_big</item>

        <item name="android:layout_marginLeft">@dimen/element_margin_left_big</item>
        <item name="android:layout_marginRight">@dimen/element_margin_right_big</item>
        <item name="android:layout_marginBottom">@dimen/element_margin_bottom_big</item>
        <item name="android:layout_marginTop">@dimen/element_margin_top_big</item>

    </style>

</resources>
