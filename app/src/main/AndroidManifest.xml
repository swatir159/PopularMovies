<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.rupeeright.popularmovies" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Stetho_Debug.PopMoviesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".UI.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.rupeeright.popularmovies.UI.MainActivity" />
        </activity>
        <activity
            android:name=".UI.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".UI.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.rupeeright.popularmovies.UI.MainActivity" />
        </activity>

        <provider
            android:name=".DataStorage.MovieDetailProvider"
            android:authorities="com.android.rupeeright.popularmovies"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <service
            android:name=".MovieDetailDownloader.PopularMoviesService"
            android:exported="false" >
        </service>

        <receiver
            android:name=".MovieDetailDownloader.PopularMoviesService$AlarmReceiver"/>

    </application>

</manifest>
